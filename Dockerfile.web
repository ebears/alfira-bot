# ---------------------------------------------------------------------------
# Optimized Dockerfile for Web Frontend
# Reduces image size from ~694MB to ~30MB by:
# - Using multi-stage build
# - Installing only production dependencies
# - Using minimal nginx:alpine image
# - Excluding unnecessary files
# ---------------------------------------------------------------------------

# ---------------------------------------------------------------------------
# Dependencies stage - install npm packages
# ---------------------------------------------------------------------------
FROM node:24-alpine AS deps

WORKDIR /app

# Copy package files first for better layer caching
COPY package.json package-lock.json ./
COPY packages/web/package.json ./packages/web/
COPY packages/shared/package.json ./packages/shared/

# Install dependencies
RUN npm ci

# ---------------------------------------------------------------------------
# Development stage - for local development with Vite HMR
# ---------------------------------------------------------------------------
FROM deps AS dev

WORKDIR /app

# Copy source files for development
COPY packages/web ./packages/web
COPY packages/shared ./packages/shared

ENV NODE_ENV=development

EXPOSE 5173

CMD ["npm", "run", "web:dev"]

# ---------------------------------------------------------------------------
# Builder stage - compile TypeScript and build static assets
# ---------------------------------------------------------------------------
FROM deps AS builder

WORKDIR /app

# Copy source files
COPY packages/web ./packages/web
COPY packages/shared ./packages/shared

# Build the web application
RUN npm run -w packages/web build

# ---------------------------------------------------------------------------
# Runtime stage - minimal nginx image serving static files
# ---------------------------------------------------------------------------
FROM nginx:alpine AS runtime

# Remove default nginx static assets
RUN rm -rf /usr/share/nginx/html/*

# Copy built static files from builder
COPY --from=builder /app/packages/web/dist /usr/share/nginx/html

# Copy nginx configuration
COPY packages/web/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
