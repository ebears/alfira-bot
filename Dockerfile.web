# ---------------------------------------------------------------------------
# Development stage â€” runs the Vite dev server with source files mounted
# from the host.  Vite HMR picks up changes in packages/web/src automatically.
# ---------------------------------------------------------------------------
FROM node:22-slim AS dev

WORKDIR /app

COPY package.json package-lock.json ./
COPY packages ./packages

RUN npm ci

EXPOSE 5173

CMD ["npm", "run", "web:dev"]

# ---------------------------------------------------------------------------
# Production stages
# ---------------------------------------------------------------------------
FROM node:22-slim AS build

WORKDIR /app

COPY package.json package-lock.json ./
COPY packages ./packages

RUN npm ci && \
    npm run -w packages/web build

FROM nginx:alpine AS runtime

WORKDIR /usr/share/nginx/html

COPY --from=build /app/packages/web/dist ./
COPY packages/web/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
